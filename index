<script>
  document.querySelectorAll('.player-item input[type="checkbox"]').forEach(function (checkbox) {
    checkbox.addEventListener('change', function () {
      var li = this.closest('.player-item');
      li.classList.toggle('done', this.checked);
    });
  });
</script>

